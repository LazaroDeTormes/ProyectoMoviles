<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/pantallaGeneros"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible">

        <Button
            android:id="@+id/btnRock"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:backgroundTint="@color/white"
            android:layout_marginRight="15dp"
            android:text="Rock"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btnPop"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:backgroundTint="@color/white"
            android:layout_toRightOf="@id/btnRock"
            android:layout_marginLeft="15dp"
            android:text="POP"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btnJazz"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:backgroundTint="@color/white"
            android:layout_marginTop="15dp"
            android:layout_below="@id/btnRock"
            android:layout_marginRight="15dp"
            android:text="Jazz"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btnMetal"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:backgroundTint="@color/white"
            android:layout_marginTop="15dp"
            android:layout_below="@id/btnPop"
            android:layout_toRightOf="@id/btnJazz"
            android:layout_marginLeft="15dp"
            android:text="Metal"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btnDrill"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:backgroundTint="@color/white"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_below="@id/btnJazz"
            android:text="Drill"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btnRap"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:backgroundTint="@color/white"
            android:layout_toRightOf="@id/btnDrill"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/btnJazz"
            android:text="rap"
            android:textColor="@color/black"/>

    </RelativeLayout>



</LinearLayout>